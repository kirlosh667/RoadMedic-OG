<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light grey background -->
    <solid android:color="#F2F2F2"/>

    <!-- Rounded corners -->
    <corners android:radius="22dp"/>

    <!-- Dark border -->
    <stroke
        android:width="2dp"
        android:color="#333333"/>

    <!-- Inner padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>
