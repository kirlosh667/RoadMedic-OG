<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rm_primary"
        app:title="Report Pothole"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/abc_ic_ab_back_material" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Capture Photo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCapturePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Photo"
                android:layout_marginBottom="16dp"
                app:cornerRadius="24dp" />

            <!-- Get Location -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Current Location"
                android:layout_marginBottom="12dp"
                app:cornerRadius="24dp" />

            <!-- Location Output (DARK TEXT) -->
            <TextView
                android:id="@+id/txtLocationOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Not captured"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="16dp" />

            <!-- Severity Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severity Level"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111111"
                android:layout_marginBottom="6dp"/>

            <!-- Severity RadioGroup -->
            <RadioGroup
                android:id="@+id/rgSeverity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbLow"
                    android:text="Low"
                    android:textColor="#212121"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbMedium"
                    android:text="Medium"
                    android:textColor="#212121"
                    android:layout_marginStart="20dp" />

                <RadioButton
                    android:id="@+id/rbHigh"
                    android:text="High"
                    android:textColor="#212121"
                    android:layout_marginStart="20dp" />
            </RadioGroup>

            <!-- Image Preview Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="280dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Photo Preview"
                    android:scaleType="centerCrop"
                    android:background="#DDDDDD"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Report"
                app:cornerRadius="24dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
